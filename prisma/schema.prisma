generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  username  String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  role      Role      @default(USER)
  exp       Int       @default(0) // Experience points
  posts     Post[]
  comments  Comment[]
  votes     Vote[]
  reports   Report[]
}

enum Role {
  USER
  ADMIN
}

enum VoteType {
  UP
  DOWN
}

model Gallery {
  id          String   @id // slug (e.g. 'main', 'dev')
  name        String
  description String?
  createdAt   DateTime @default(now())
  posts       Post[]
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String
  imageUrl  String?
  viewCount Int      @default(0)
  upCount   Int      @default(0)
  downCount Int      @default(0) // Added DownCount
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  authorId  String?  // Optional for Guest
  author    User?    @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // Guest Fields
  nickname  String?
  password  String?
  ipAddress String?
  
  galleryId String?  // Optional for migration compatibility, but logic will enforce it
  gallery   Gallery? @relation(fields: [galleryId], references: [id])

  comments  Comment[]
  votes     Vote[]    // Relation to Vote
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  authorId  String? // Optional for Guest
  author    User?    @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // Guest Fields
  nickname  String?
  password  String?
  ipAddress String?

  // Nested Comments
  parentId  String?
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")
}

model Vote {
  id        String   @id @default(uuid())
  type      VoteType
  userId    String
  postId    String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
}

model EmoticonPack {
  id           String     @id @default(uuid())
  name         String
  thumbnailUrl String?
  emoticons    Emoticon[]
  createdAt    DateTime   @default(now())
}

model Emoticon {
  id        String       @id @default(uuid())
  imageUrl  String
  code      String?
  packId    String
  pack      EmoticonPack @relation(fields: [packId], references: [id], onDelete: Cascade)
}

model Report {
  id        String   @id @default(uuid())
  reason    String
  details   String?
  status    ReportStatus @default(PENDING) // PENDING, RESOLVED, DISMISSED
  targetType String // POST, COMMENT
  targetId  String
  
  reporterId String?
  reporter   User?   @relation(fields: [reporterId], references: [id])
  
  createdAt DateTime @default(now())
}

enum ReportStatus {
  PENDING
  RESOLVED
  DISMISSED
}

model Ban {
  id        String   @id @default(uuid())
  type      BanType  // IP, USER
  value     String   // IP address or UserId
  reason    String?
  expiresAt DateTime?
  createdAt DateTime @default(now())
}

enum BanType {
  IP
  USER
}

model ForbiddenWord {
  id        String   @id @default(uuid())
  word      String   @unique
  createdAt DateTime @default(now())
}
