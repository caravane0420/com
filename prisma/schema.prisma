generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  username  String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  role      Role      @default(USER) // Added Role
  posts     Post[]
  comments  Comment[]
  votes     Vote[]     // Relation to Vote
}

enum Role {
  USER
  ADMIN
}

enum VoteType {
  UP
  DOWN
}

model Gallery {
  id          String   @id // slug (e.g. 'main', 'dev')
  name        String
  description String?
  createdAt   DateTime @default(now())
  posts       Post[]
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String
  imageUrl  String?
  viewCount Int      @default(0)
  upCount   Int      @default(0)
  downCount Int      @default(0) // Added DownCount
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  galleryId String?  // Optional for migration compatibility, but logic will enforce it
  gallery   Gallery? @relation(fields: [galleryId], references: [id])

  comments  Comment[]
  votes     Vote[]    // Relation to Vote
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model Vote {
  id        String   @id @default(uuid())
  type      VoteType
  userId    String
  postId    String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
}

model EmoticonPack {
  id           String     @id @default(uuid())
  name         String
  thumbnailUrl String?
  emoticons    Emoticon[]
  createdAt    DateTime   @default(now())
}

model Emoticon {
  id        String       @id @default(uuid())
  imageUrl  String
  code      String?
  packId    String
  pack      EmoticonPack @relation(fields: [packId], references: [id], onDelete: Cascade)
}
